<h1>Burgers!</h1>

<h2>Available Burgers</h2>
<ul>
{{#each burgers}}

    {{#unless devoured}}
    <li>{{burger_name}}</li>
    <button class="devour" data-id="{{id}}">Devour!</button>
    {{/unless}}
    
{{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
{{#each burgers}}

    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}

{{/each}}
</ul>

<form id="create-burger-form" action="/api/burgers" method="POST">
    <input type="text" name="burger_name">
    <button>Add Burger</button>
</form>

<script>

$("#create-burger-form").on("submit", (e) => {

    e.preventDefault();

    const burgerData = {
        burger_name: $('[name="burger_name"]').val()
    };
    
    $.ajax({
        url: "/api/burgers",
        method: "POST",
        data: burgerData
    }).then(() => {
        location.reload();
    });
    
});

$(".devour").on("click", function() {

    const burgerId = $(this).data("id");
    const updateRoute = "/api/burgers/" + burgerId;

    $.ajax({
        url: updateRoute,
        method: "PUT",
        data: {
            devoured: 1
        }
    }).then(() => {
        location.reload();
    });

});

</script>